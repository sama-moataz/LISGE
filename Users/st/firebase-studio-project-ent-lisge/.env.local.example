# Example .env.local file for LISGE Hub
# Copy this file to .env.local and fill in your actual values.
# IMPORTANT: Replace "/YOUR/FULL/PATH/TO/PROJECT/ROOT/" with the actual absolute path to your project's root directory on your computer.

# Firebase Admin SDK Service Account Key
# Ensure the JSON file 'lisge-hbsqy-firebase-adminsdk-fbsvc-48962f7e22.json' is in your project root.
GOOGLE_APPLICATION_CREDENTIALS="/YOUR/FULL/PATH/TO/PROJECT/ROOT/lisge-hbsqy-firebase-adminsdk-fbsvc-48962f7e22.json"

# Firebase Client SDK Config (already in your next.config.js or similar, ensure these match your project)
NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_AUTH_DOMAIN"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_STORAGE_BUCKET"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_MESSAGING_SENDER_ID"
NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_APP_ID"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="YOUR_MEASUREMENT_ID" # Optional
